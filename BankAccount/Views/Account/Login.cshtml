@model BankAccount.Models.Dtos.LoginViewModel
@{

    ViewData["Title"] = "Logowanie";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm("LoggedIn", "Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(n => n.Login)
                @Html.TextBoxFor(n => n.Login, new { @class = "form-control" })
                @Html.ValidationMessageFor(n => n.Login, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.Password)
                @Html.TextBoxFor(n => n.Password, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(n => n.Password, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-success">Logowanie</button>

        }
    </div>
</div>